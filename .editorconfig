# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation for most files
[*.{js,jsx,ts,tsx,json,md,yml,yaml,html,css,scss,sass,less}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# Exclude submodules - they have their own configuration
[backend/bwv-zeug/**]
indent_style = unset
indent_size = unset
end_of_line = unset

[backend/solmisasi-lily/**]
indent_style = unset
indent_size = unset
end_of_line = unset
